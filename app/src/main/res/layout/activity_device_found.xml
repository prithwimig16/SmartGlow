<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".DeviceFound.DeviceFoundActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tag1"
        android:textSize="16sp"
        android:textColor="#4a4a4a"
        android:lineSpacingExtra="8sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="We have found"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_number_of_device_found"
        android:layout_below="@+id/tv_tag1"
        android:textSize="16sp"
        android:textColor="#4a4a4a"
        android:lineSpacingExtra="8sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="3 Luminous SmartGlo near you"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/oval"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/oval_copy"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_tap"
        android:layout_centerInParent="true"
        android:src="@drawable/oval_4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tap"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:lineSpacingExtra="-5sp"
        android:gravity="center_horizontal"
        tools:text="TAP"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tap_to_add"
        android:layout_below="@+id/tv_tap"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:lineSpacingExtra="9sp"
        android:gravity="center_horizontal"
        tools:text="to add" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_search_again_tag"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#4a4a4a"
        android:layout_marginBottom="30dp"
        android:text="Search Again?" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_light1"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/img_tap"
        android:layout_marginLeft="20dp"
        android:src="@drawable/group_7"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_light2"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/img_tap"
        android:layout_marginRight="20dp"
        android:src="@drawable/group_7"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_light3"
        android:layout_centerInParent="true"
        android:layout_above="@id/img_tap"
        android:src="@drawable/group_7"/>

</RelativeLayout>